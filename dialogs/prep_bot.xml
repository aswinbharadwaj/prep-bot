<?xml version="1.0" encoding="UTF-8"?>
<dialog xsi:noNamespaceSchemaLocation="WatsonDialogDocument_1.0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <flow>
        <folder label="Main">
            <output>
                <prompt selectionType="RANDOM">
                    <item>Hello, welcome to Prep Bot</item>
                </prompt>
                <goto ref="init"/>
            </output>
            <getUserInput id="init">
                <search ref="starter"/>
                <default>
                    <output>
                        <prompt selectionType="RANDOM">
                            <item>I am sorry, I did not understand your question. Please try asking another one.</item>
                        </prompt>
                    </output>
                </default>
            </getUserInput>
        </folder>
        <folder label="Library">
            <folder label="Convo" id="starter">
                <input>
                    <grammar>
                        <item>What prep material do you have?</item>
                        <item>$ prep material</item>
                        <item>Show me the list of topics</item>
                        <item>$ list of topics</item>
                        <item>What * topics * have</item>
                        <item>$ list topics * available</item>
                        <item>What can I learn today?</item>
                        <item>$ what topics do you have</item>
                    </grammar>
                    <output id="selection">
                        <prompt selectionType="RANDOM">
                            <item>You can choose from Python, Java, Node or HTML</item>
                        </prompt>
                    </output>
                </input>
                <input>
                    <grammar>
                        <item>Python</item>
                        <item>python</item>
                        <item>$ python</item>
                    </grammar>
                    <output id="pyq">
                        <prompt selectionType="SEQUENTIAL">
                            <item>Great, looks like we could start with 5 questions (let me know when you're done!)<br/>py1</item>
                            <item>py2</item>
                            <item>py3</item>
                            <item>py4</item>
                            <item>py5</item>
                        </prompt>
                        <getUserInput id="pyres">
                            <search ref="pyans"/>
                            <default>
                                <output>
                                    <prompt selectionType="RANDOM">
                                        <item>I am sorry, but that wasn't right.</item>
                                    </prompt>
                                    <goto ref="pyq"/>
                                </output>
                            </default>
                        </getUserInput>
                    </output>
                    <input>
                        <grammar>
                             <item>$ done</item>
                             <item>$ Done</item>
                        </grammar>
                        <output>
                            <prompt selectionType="RANDOM">
                                <item>Hope you enjoyed the questions!</item>
                            </prompt>
                            <goto ref="pyq"/>
                        </output>
                    </input>
                </input>
        </folder>
        <folder label="Answer" id="pyans">
                <input>
                    <grammar>
                        <item>*</item>
                    </grammar>
                    <output id="selection">
                        <prompt selectionType="RANDOM">
                            <item>You got it right!</item>
                        </prompt>
                        <goto ref="pyq"/>
                    </output>
                </input>
        </folder>
        <folder label="Storage"/>
        </folder>
        <folder label="Global"/>
        <folder label="Concepts"/>
    </flow>
</dialog>